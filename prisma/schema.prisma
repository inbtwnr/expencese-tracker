generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(cuid())
  email   String @unique
  name    String?
  role    Role   @default(USER)
  banks   Bank[]
}

model Bank {
  id      String @id @default(cuid())
  name    String
  user    User @relation(fields: [userId], references: [id])
  cards   Card[]
  userId  String
}

model Card {
  id      String @id @default(cuid())
  name    String
  bank    Bank @relation(fields: [bankId], references: [id])
  bankId  String
}

enum Role {
  USER
  ADMIN
}